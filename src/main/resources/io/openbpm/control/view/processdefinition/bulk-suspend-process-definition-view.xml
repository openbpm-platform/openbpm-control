<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://bulkSuspendProcessTitle">
    <layout>
        <span text="msg://bulkSuspendProcessDefinitionMsg"
               width="100%"/>
        <hbox>
            <hbox id="suspendAllVersionsHBox" alignItems="CENTER" justifyContent="START" themeNames="spacing-xs">
                <checkbox id="suspendAllVersionsCheckBox" label="msg://allVersions"/>
                <icon icon="QUESTION_CIRCLE" id="allVersionsContextHelp" size="0.9em">
                    <tooltip text="msg://suspendAllVersions.tooltip" position="BOTTOM_START"/>
                </icon>
            </hbox>
            <hbox id="suspendAllInstancesHBox" alignItems="CENTER" justifyContent="START" themeNames="spacing-xs">
                <checkbox id="suspendProcessInstancesCheckBox"
                          label="msg://allInstances"/>
                <icon icon="QUESTION_CIRCLE" id="allInstancesContextHelp" size="0.9em">
                    <tooltip text="msg://bulkSuspendAllInstances.tooltip" position="BOTTOM_START"/>
                </icon>
            </hbox>
        </hbox>


        <hbox justifyContent="END" width="100%">
            <button id="suspendBtn"
                    text="msg://suspend"
                    icon="PAUSE"
                    themeNames="primary"/>
            <button id="cancelBtn" text="msg:///actions.Cancel" icon="BAN" />
        </hbox>
    </layout>
</view>