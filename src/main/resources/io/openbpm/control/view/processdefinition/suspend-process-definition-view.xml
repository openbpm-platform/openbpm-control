<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://suspendProcessTitle">
    <layout>
        <span text="msg://suspendProcessDefinitionMsg"
               width="100%"/>
        <hbox alignItems="CENTER" justifyContent="START" themeNames="spacing-xs">
            <checkbox id="suspendProcessInstancesCheckBox"
                      label="msg://allInstances"/>
            <icon icon="QUESTION_CIRCLE" id="allInstancesContextHelp" size="0.9em">
                <tooltip text="msg://suspendProcessInstances" position="BOTTOM_START"/>
            </icon>
        </hbox>

        <hbox justifyContent="END" width="100%">
            <button id="suspendBtn"
                    text="msg://suspend"
                    icon="PAUSE"
                    themeNames="primary"/>
            <button id="cancelBtn" text="msg:///actions.Cancel" icon="BAN" />
        </hbox>
    </layout>
</view>