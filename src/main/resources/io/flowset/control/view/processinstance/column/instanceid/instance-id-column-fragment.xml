<fragment xmlns="http://jmix.io/schema/flowui/fragment">
    <data>
        <instance id="processInstanceDc" class="io.flowset.control.entity.processinstance.RuntimeProcessInstanceData">
            <loader id="processInstanceDl"/>
        </instance>
    </data>
    <actions>
        <action id="copy" type="control_copyEntityPropertyToClipboard">
            <properties>
                <property name="dataContainer" value="processInstanceDc"/>
                <property name="property" value="instanceId"/>
                <property name="text" value=""/>
            </properties>
        </action>
    </actions>
    <content>
        <hbox id="root" padding="false" spacing="false" classNames="overflow-hidden">
            <span dataContainer="processInstanceDc" property="instanceId" classNames="w-full overflow-hidden overflow-ellipsis"/>
            <button id="copyBtn" icon="COPY" themeNames="tertiary-inline" classNames="text-secondary" action="copy"/>
        </hbox>
    </content>
</fragment>