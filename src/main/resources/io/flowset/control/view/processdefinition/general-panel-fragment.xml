<fragment xmlns="http://jmix.io/schema/flowui/fragment">
    <data>
        <instance id="processDefinitionDataDc"
                  class="io.flowset.control.entity.processdefinition.ProcessDefinitionData" provided="true"/>
        <collection id="processInstanceDataDc"
                    class="io.flowset.control.entity.processinstance.ProcessInstanceData" provided="true"/>
    </data>
    <actions>
        <action id="copyIdAction" type="control_copyComponentValueToClipboard">
            <properties>
                <property name="text" value=""/>
            </properties>
        </action>
        <action id="copyKeyAction" type="control_copyComponentValueToClipboard">
            <properties>
                <property name="text" value=""/>
            </properties>
        </action>
    </actions>
    <content>
        <flexLayout classNames="process-slide-panel">
            <flexLayout id="processDetailsPanel" width="min-content" height="100%" classNames="bordered-container">
                <vbox id="upperPanel" themeNames="spacing-s" classNames="process-properties-panel active" padding="false">
                    <h4 text="msg://processInformationHeader.text" classNames="pt-s pb-s pr-m pl-m"/>
                    <formLayout id="processDefinitionForm" dataContainer="processDefinitionDataDc" width="inherit"
                                classNames="pt-s pb-s pr-m pl-m box-border" >
                        <responsiveSteps>
                            <responsiveStep minWidth="0" columns="1"/>
                            <responsiveStep minWidth="60em" columns="2"/>
                            <responsiveStep minWidth="80em" columns="3"/>
                        </responsiveSteps>
                        <textArea property="name" readOnly="true" width="100%"/>
                        <textField id="keyField" property="key" readOnly="true" label="msg://io.flowset.control.view.processdefinition/key"
                                   classNames="pt-0 flex-grow"
                                   dataContainer="processDefinitionDataDc">
                            <suffix>
                                <button id="copyKeyButton" icon="COPY_O" themeNames="tertiary-inline" action="copyKeyAction"/>
                            </suffix>
                        </textField>
                        <textField id="idField" property="id" readOnly="true">
                            <suffix>
                                <button id="copyIdButton" icon="COPY_O" themeNames="tertiary-inline" action="copyIdAction"/>
                            </suffix>
                        </textField>
                        <checkbox id="startableInTaskListField" property="startableInTaskList" readOnly="true"/>
                        <textArea id="descriptionField" property="description" readOnly="true"/>
                        <details opened="true" themeNames="reverse small" summaryText="msg://io.flowset.control.view.processdefinition/deploymentGroup"
                                 width="100%"
                                 classNames="pt-s">
                            <vbox padding="false" width="100%" themeNames="spacing-xs">
                                <textField id="deploymentIdField" readOnly="true" width="100%" classNames="pt-xs"
                                           label="msg://io.flowset.control.view.processdefinition/deploymentId">
                                    <suffix>
                                        <button id="viewDeployment" icon="SEARCH" themeNames="tertiary-inline"/>
                                    </suffix>
                                </textField>

                                <dateTimePicker id="deploymentTimeField" readOnly="true" width="100%" classNames="pt-xs"
                                                label="msg://io.flowset.control.view.processdefinition/deploymentTime"/>
                                <textField id="deploymentSourceField" readOnly="true" width="100%" classNames="pt-xs"
                                           label="msg://io.flowset.control.view.processdefinition/deploymentSource"/>
                            </vbox>
                        </details>
                    </formLayout>
                </vbox>
                <vbox themeNames="spacing-xs" classNames="shadow-s p-s process-details-actions-panel" width="min-content">
                    <button id="infoBtn" icon="INFO_CIRCLE" title="msg://hideProcessInformation.title" classNames="bordered-button" themeNames="small"/>
                    <vbox themeNames="spacing-xs" id="runtimeInstanceActions" padding="false">
                        <button id="startProcessBtn" icon="PLAY_CIRCLE" title="msg://startProcessBtn.title" themeNames="small"
                                classNames="bordered-button"/>
                        <button id="activateBtn" icon="PLAY" title="msg://activateBtn.title" themeNames="small"
                                classNames="bordered-button"/>
                        <button id="suspendBtn" icon="PAUSE" title="msg://suspendBtn.title" themeNames="small"
                                classNames="bordered-button"/>
                        <button id="migrateBtn" icon="FORWARD" title="msg://migrateBtn.title" themeNames="small"
                                classNames="bordered-button"/>
                        <button id="deleteBtn" icon="TRASH" title="msg://deleteBtn.title" themeNames="small error"
                                classNames="bordered-button"/>
                    </vbox>
                </vbox>
            </flexLayout>
        </flexLayout>
    </content>
</fragment>